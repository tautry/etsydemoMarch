<div class="jumbotron">  
  <h1>Handcrafted items from around the world.</h1><br/><br/>
  <h2>Discover one-of-a-kind items</h2>
</div> 
<div class="center">
    <h1>Listing listings</h1>


      <div class="row">
        <% @listings.each do |listing| %>  
        <div class="col-md-3">
     <%= link_to image_tag(listing.image_url(:thumbnail)), listing %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= listing.user.name %></p>
        
                      <% if (user_signed_in?) && (current_user == listing.user) %>
        
          <% end %>
           </div>
         </div>


        <% end %>


      </div>
    <br>
   <% if (user_signed_in?) %>

    <%= link_to 'New Listing', new_listing_path, class:'btn btn-link' %>
  <% end %>
</div>